{
  "env": {
      "browser": true,
      "es2021": true
  },
  "extends": [
      "prettier",
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
  },
  "plugins": [
      "@typescript-eslint"
  ],
  "rules": {
      "no-undef": "off",
      "@typescript-eslint/no-var-requires": "off",
      "prettier/prettier": "off"
  }
}
